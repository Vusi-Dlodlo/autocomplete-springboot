<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Bootstrap 3.4.1 Themed Layout with New Theme Dropdown</title>

  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet" />
  <!-- Font Awesome CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

  <style>
    /* Your provided CSS color variables */
    :root {
      --brand-orange-700: #EA5A24;
      --brand-orange-600: #EF7726;
      --brand-orange-500: #F59C23;
      --brand-black: #000000;
      --brand-white: #FFFFFF;

      --brand-gradient-1: #EA5A24;
      --brand-gradient-2: #EF7726;
      --brand-gradient-3: #F59C23;

      --brand-green-300: #7C8C7C;

      --brand-teal-200: #4AC1C5;
      --brand-teal-300: #007C7B;
      --brand-teal-400: #009095;

      --func-success-600: #00C075;
      --func-error: #FF0000;

      --ghost-400: #939393;

      --sys-paper-light: #FFFFFF;
      --sys-ink-light: #000000;
      --sys-elev-light: #E7E6E6;

      --sys-bg-dark: #1B1B1B;
      --sys-elev-dark: #333333;
      --sys-ink-dark: #FFFFFF;
    }

    /* Themes */
    :root,
    :root[data-theme="light"] {
      --color-bg: var(--sys-paper-light);
      --color-elev: var(--sys-elev-light);
      --color-text: var(--sys-ink-light);
      --color-primary: var(--brand-orange-700);
      --color-primary-contrast: var(--brand-white);
      --color-secondary: var(--brand-teal-300);
      --color-secondary-contrast: var(--brand-white);
      --color-hover: var(--brand-green-300);
      --color-border: var(--ghost-400);
      --gradient-brand: linear-gradient(90deg, var(--brand-gradient-1), var(--brand-gradient-2), var(--brand-gradient-3));
    }
    :root[data-theme="dark"] {
      --color-bg: var(--sys-bg-dark);
      --color-elev: var(--sys-elev-dark);
      --color-text: var(--sys-ink-dark);
      --color-primary: var(--brand-orange-600);
      --color-primary-contrast: var(--brand-black);
      --color-secondary: var(--brand-teal-200);
      --color-secondary-contrast: var(--brand-black);
      --color-hover: var(--func-error);
      --color-border: var(--ghost-400);
      --gradient-brand: linear-gradient(90deg, var(--brand-orange-600), var(--brand-orange-500));
    }
    :root[data-theme="orange"] {
      --color-bg: var(--brand-white);
      --color-elev: var(--brand-white);
      --color-text: var(--brand-black);
      --color-primary: var(--brand-orange-700);
      --color-primary-contrast: var(--brand-white);
      --color-secondary: var(--brand-orange-500);
      --color-secondary-contrast: var(--brand-black);
      --color-hover: var(--brand-teal-300);
      --color-border: var(--ghost-400);
      --gradient-brand: linear-gradient(135deg, var(--brand-orange-700), var(--brand-orange-600), var(--brand-orange-500));
    }
    :root[data-theme="teal"] {
      --color-bg: var(--sys-paper-light);
      --color-elev: var(--sys-elev-light);
      --color-text: var(--sys-ink-light);
      --color-primary: var(--brand-teal-400);
      --color-primary-contrast: var(--brand-white);
      --color-secondary: var(--brand-orange-600);
      --color-secondary-contrast: var(--brand-white);
      --color-hover: var(--brand-orange-500);
      --color-border: var(--ghost-400);
      --gradient-brand: linear-gradient(90deg, var(--brand-teal-200), var(--brand-teal-400), var(--brand-teal-600));
    }

    /* Layout and transitions */
    body {
      background-color: var(--color-bg);
      color: var(--color-text);
      transition: background-color 1.2s ease, color 1.2s ease;
    }
    .navbar-default {
      background-color: var(--color-primary);
      border-color: var(--color-border);
      color: var(--color-primary-contrast);
      transition: background-color 1.2s ease, border-color 1.2s ease, color 1.2s ease;
    }
    .navbar-default .navbar-nav > li > a {
      color: var(--color-primary-contrast);
      transition: color 1.2s ease;
    }
    .navbar-default .navbar-nav > li > a:hover,
    .navbar-default .navbar-nav > li > a:focus {
      background-color: var(--color-hover);
      color: var(--color-primary-contrast);
    }
    .navbar-default .navbar-brand {
      color: var(--color-primary-contrast);
      transition: color 1.2s ease;
    }
    .sidebar {
      background-color: var(--color-primary);
      color: var(--color-primary-contrast);
      border-right: 1px solid var(--color-border);
      min-height: 100vh;
      transition: background-color 1.2s ease, color 1.2s ease, border-color 1.2s ease;
    }
    .sidebar .nav > li > a {
      color: var(--color-primary-contrast);
      transition: color 1.2s ease;
    }
    .sidebar .nav > li > a:hover {
      background-color: var(--color-hover);
      color: var(--color-primary-contrast);
    }
    .panel {
      background-color: var(--color-bg);
      border-color: var(--color-border);
      color: var(--color-text);
      transition: background-color 1.2s ease, border-color 1.2s ease, color 1.2s ease;
    }
    .panel-default > .panel-heading {
      background-color: var(--color-primary);
      color: var(--color-primary-contrast);
      border-color: var(--color-border);
      transition: background-color 1.2s ease, color 1.2s ease, border-color 1.2s ease;
    }
    .panel-body {
      background-color: var(--color-elev);
      transition: background-color 1.2s ease;
    }
    /* ... more component styling (dropdowns, buttons, alerts) as before ... */

    /* Theme icon with gradient background and flip animation */
    .theme-icon {
      position: fixed;
      top: 50%;
      left: 50%;
      width: 120px;
      height: 120px;
      background: var(--gradient-brand);
      border-radius: 50%;
      font-size: 5rem;
      color: var(--brand-white);
      z-index: 1050;
      pointer-events: none;
      user-select: none;
      display: none;
      backface-visibility: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 0 20px rgba(0,0,0,0.15);
      transform-style: preserve-3d;
      transform-origin: center;
    }
    @keyframes flipInAnimation {
      0% {
        transform: translate(-50%, -50%) rotateY(90deg);
        opacity: 0;
      }
      50% {
        transform: translate(-50%, -50%) rotateY(0deg);
        opacity: 1;
      }
      100% {
        transform: translate(-50%, -50%) rotateY(0deg);
        opacity: 1;
      }
    }
    .theme-icon.flip-in {
      display: flex;
      animation: flipInAnimation 1.2s ease forwards;
    }
    /* Icon content for each theme */
    :root[data-theme="light"] .theme-icon::before { content: "\f185"; font-family: FontAwesome; }
    :root[data-theme="dark"] .theme-icon::before { content: "\f186"; font-family: FontAwesome; }
    :root[data-theme="orange"] .theme-icon::before { content: "\f1fd"; font-family: FontAwesome; }
    :root[data-theme="teal"] .theme-icon::before { content: "\f043"; font-family: FontAwesome; }

    /* New theme dropdown styles */
    #themeSelectorDropdown {
      position: fixed;
      top: 10px;
      right: 10px;
      z-index: 1100; /* Above other elements */
    }
  </style>
</head>
<body>
  <!-- Theme Icon -->
  <div class="theme-icon" aria-hidden="true"></div>

  <!-- Navbar with your existing dropdown unchanged -->
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <button
          type="button"
          class="navbar-toggle collapsed"
          data-toggle="collapse"
          data-target="#navbar-collapse"
          aria-expanded="false"
        >
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Brand</a>
      </div>
      <div class="collapse navbar-collapse" id="navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="#">Home</a></li>
          <li class="dropdown">
            <a
              href="#"
              class="dropdown-toggle"
              data-toggle="dropdown"
              role="button"
              aria-haspopup="true"
              aria-expanded="false"
              >Dropdown <span class="caret"></span
            ></a>
            <ul class="dropdown-menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- New Theme Selection Dropdown (Fixed top right) -->
  <div id="themeSelectorDropdown" class="dropdown">
    <button
      class="btn btn-default dropdown-toggle"
      type="button"
      id="themeDropdownMenuButton"
      data-toggle="dropdown"
      aria-haspopup="true"
      aria-expanded="false"
    >
      Select Theme <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="themeDropdownMenuButton">
      <li><a href="#" data-theme="light">Light</a></li>
      <li><a href="#" data-theme="dark">Dark</a></li>
      <li><a href="#" data-theme="orange">Orange</a></li>
      <li><a href="#" data-theme="teal">Teal</a></li>
    </ul>
  </div>

  <!-- Main Content -->
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-3 sidebar">
        <ul class="nav nav-pills nav-stacked">
          <li><a href="#">Sidebar Item 1</a></li>
          <li><a href="#">Sidebar Item 2</a></li>
          <li><a href="#">Sidebar Item 3</a></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="theme-switcher">
          <!-- Existing theme switcher buttons remain if you want -->
          <!-- Or remove these if you only want the new dropdown -->
        </div>

        <div class="panel panel-default">
          <div class="panel-heading">Panel Heading</div>
          <div class="panel-body">
            <p>This is a panel body with some content.</p>
            <button class="btn btn-primary" data-toggle="tooltip" title="Primary Button Tooltip">Primary Button</button>
            <button class="btn btn-default" data-toggle="tooltip" title="Default Button Tooltip">Default Button</button>
            <button class="btn btn-success">Success Button</button>
            <button class="btn btn-danger">Danger Button</button>
          </div>
        </div>

        <div class="alert alert-success">This is a success alert!</div>
        <div class="alert alert-danger">This is a danger alert!</div>
        <div class="alert alert-warning">This is a warning alert!</div>
        <div class="alert alert-info">This is an info alert!</div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS / jQuery -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

  <script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip();

      const themeIcon = document.querySelector('.theme-icon');
      const container = document.documentElement;

      // Load saved theme on page load
      const savedTheme = localStorage.getItem('selectedTheme');
      if (savedTheme) {
        container.setAttribute('data-theme', savedTheme);
      }

      // Theme selection from the new dropdown
      $('#themeSelectorDropdown .dropdown-menu a').on('click', function(e) {
        e.preventDefault();
        const selectedTheme = $(this).data('theme');
        if (container.getAttribute('data-theme') === selectedTheme) return; // no change

        localStorage.setItem('selectedTheme', selectedTheme);

        // Animate icon and apply theme
        themeIcon.classList.remove('flip-in');
        container.setAttribute('data-theme', selectedTheme);
        themeIcon.style.display = 'flex';
        void themeIcon.offsetWidth; // restart animation
        themeIcon.classList.add('flip-in');

        // Hide content to prevent flicker
        $('.container-fluid').css('visibility', 'hidden');

        setTimeout(() => {
          themeIcon.style.display = 'none';
          $('.container-fluid').css('visibility', 'visible');
        }, 1200);
      });
    });
  </script>
</body>
</html>
